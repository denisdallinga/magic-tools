<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>
      <%= link_to @poule.name, @poule %>
    </strong>
    <br />
    <%= @poule.state_to_s %>
  </p>

  <%= form_tag("/poules/#{@poule.id}/show_available_picks", method: "get") do %>
    <%= label_tag("Rarity:") %>
    <%= radio_button_tag(:rarity, 'M') %>
    <%= label_tag("Mythic") %>
    <%= radio_button_tag(:rarity, 'R') %>
    <%= label_tag("Rare") %>
    <%= radio_button_tag(:rarity, 'U') %>
    <%= label_tag("Uncommon") %>
    <%= radio_button_tag(:rarity, 'C') %>
    <%= label_tag("Common") %>
    <%= radio_button_tag(:rarity, 'T') %>
    <%= label_tag("Token") %>
    <%= submit_tag 'Filter' %>
  <% end %>

  <h2>All available cards</h2>
  <% @card_picks.each do |card_pick| %>
    <p>
      <strong>
        <%= link_to card_pick.card.card_name, controller: :cards, action: :show, id: card_pick.card.id %>
        (<%= card_pick.card.rarity %>)
      </strong>
    </p>
  <% end %>

</div>
